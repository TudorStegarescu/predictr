{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "./src",
    "rootDir": "./src",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "typings/tsd.d.ts",
    "typings/main",
    "node_modules"
  ],
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx",
    "!node_modules/**"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
